{
  "moduleFileExtensions": ["json", "js", "jsx", "ts", "tsx"],
  "rootDir": "./",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.ts"],
  "coverageDirectory": "<rootDir>/coverage",
  "testEnvironment": "node",
  "setupFiles": ["dotenv/config"]
}
